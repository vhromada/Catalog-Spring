<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>mvc-dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>mvc-dispatcher</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <error-page>
        <exception-type>java.lang.IllegalArgumentException</exception-type>
        <location>/error/known</location>
    </error-page>

    <error-page>
        <exception-type>cz.vhromada.validators.exceptions.ValidationException</exception-type>
        <location>/error/known</location>
    </error-page>

    <error-page>
        <exception-type>cz.vhromada.validators.exceptions.ReferenceIntegrityException</exception-type>
        <location>/error/known</location>
    </error-page>

    <error-page>
        <exception-type>cz.vhromada.validators.exceptions.RecordNotFoundException</exception-type>
        <location>/error/known</location>
    </error-page>

    <error-page>
        <exception-type>cz.vhromada.catalog.facade.exceptions.FacadeOperationException</exception-type>
        <location>/error/known</location>
    </error-page>

    <error-page>
        <exception-type>cz.vhromada.catalog.web.exceptions.IllegalRequestException</exception-type>
        <location>/error/request</location>
    </error-page>

    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error/unknown</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/error/page</location>
    </error-page>

</web-app>
