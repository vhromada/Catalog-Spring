<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://dozer.sourceforge.net"
          xsi:schemaLocation="http://dozer.sourceforge.net http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <configuration>
        <custom-converters>
            <converter type="cz.vhromada.catalog.web.converters.MovieConverter">
                <class-a>cz.vhromada.catalog.web.fo.MovieFO</class-a>
                <class-b>cz.vhromada.catalog.facade.to.MovieTO</class-b>
            </converter>
            <converter type="cz.vhromada.catalog.web.converters.ShowConverter">
                <class-a>cz.vhromada.catalog.web.fo.ShowFO</class-a>
                <class-b>cz.vhromada.catalog.facade.to.ShowTO</class-b>
            </converter>
            <converter type="cz.vhromada.catalog.web.converters.EpisodeConverter">
                <class-a>cz.vhromada.catalog.web.fo.EpisodeFO</class-a>
                <class-b>cz.vhromada.catalog.facade.to.EpisodeTO</class-b>
            </converter>
            <converter type="cz.vhromada.catalog.web.converters.SongConverter">
                <class-a>cz.vhromada.catalog.web.fo.SongFO</class-a>
                <class-b>cz.vhromada.catalog.facade.to.SongTO</class-b>
            </converter>
            <converter type="cz.vhromada.catalog.web.converters.GenreToStringConverter">
                <class-a>cz.vhromada.catalog.facade.to.GenreTO</class-a>
                <class-b>java.lang.String</class-b>
            </converter>
        </custom-converters>
    </configuration>

</mappings>
